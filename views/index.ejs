<!DOCTYPE html>
<html>

<head>
  <title>Scrapping tools</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
  <link rel='stylesheet' href='/stylesheets/dataTables.bootstrap4.min.css' />
  <!-- <script src="/javascripts/bootstrap.min.js"></script> -->

</head>

<body>
  <div class="container">
    <h3 class="text-center mt-5">Szwego Scraping Tool</h3>
    <div class="row">
      <form class="myform">
        <div class="form-grup">
          <div class="row">
            <div class="col-md-4">
              <input type="text" class="form-control" value="" id="wx-code" placeholder="WX-Code">
            </div>
            <div class="col-md-4">
              <input type="text" class="form-control" value="" id="description" placeholder="Description">
            </div>
            <div class="col-md-4">
              <input type="text" class="form-control" value="" id="albumname" placeholder="Album Name">
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-10">
            <input type="text" class="form-control" value="" id="url" placeholder="URL">
          </div>
          <div class="col-md-2">
            <button class="btn btn-primary m-auto" type="button" id="btn-add"><img src="/images/loading.gif" alt=""
                class="loading-gif d-none" id="loading">Add New</button>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-4 text-center">
            <h2 class="btn btn-success m-auto" id="status"><img src="/images/loading.gif" alt=""
                class="loading-gif d-none" id="status_img"><span id="status_text">Scraping all done.</span> </h2>
          </div>
          <div class="col-md-4">
            <button class="btn btn-toggle m-auto" type="button" id="btn-toggle">Hide Table</button>
          </div>
          <div class="col-md-4">
            <a href="/uploadpage"><button class="btn btn-primary m-auto" type="button" id="goto_up">Go to uploading
                form</button></a>
          </div>
        </div>
        <br>
        <div class="row" id="tableview">
          <table class="table table-striped table-bordered" id="datatable">
            <thead>
              <tr>
                <th class="text-center">No.</th>
                <th class="text-center">WX-Code</th>
                <th class="text-center">Description</th>
                <th class="text-center">Album Name</th>
                <th class="text-center">URL</th>
                <th class="text-center">Updates</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i < shop_list.length; i++) { %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= shop_list[i].WXCode %></td>
                <td><%= shop_list[i].Description %></td>
                <td><%= shop_list[i].AlbumName %></td>
                <td><%= shop_list[i].shopURL %></td>
                <td>
                  <p id="update_<%= i %>"><%=updates[i]%></p>
                </td>
                <td><button class="btn btn-danger" type="button"
                    onclick="deleteitem(`<%=shop_list[i]._id%>`)">Delete</button></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <br>
        <div class="text-center row">
          <!-- <div class="col-md-6">
            <button class="btn btn-primary m-auto" type="button" id="down-img"><img src="/images/loading.gif" alt=""
                class="loading-gif d-none" id="downloading_img"><span id="img_txt">Zip Images</span></button>
          </div> -->
          <div class="col-md-12">
            <button class="btn btn-success m-auto" type="button" id="down-csv"><img src="/images/loading.gif" alt=""
                class="loading-gif d-none" id="downloading_csv"><span id="csv_txt">Zip CSV file</span></button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <!-- <script src="/javascripts/bootstrap.min.js"></script> -->
  <script src="/javascripts/jquery-3.3.1.js"></script>
  <script src="/javascripts/jquery.dataTables.min.js"></script>
  <script src="/javascripts/dataTables.bootstrap4.min.js"></script>
  <script src="/javascripts/sweetalert.min.js"></script>
  <script src="/javascripts/custom.js"></script>

</body>


</html>